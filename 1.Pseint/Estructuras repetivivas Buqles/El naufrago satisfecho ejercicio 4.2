Proceso naufrago
	//4.2 “El náufrago satisfecho” ofrece hamburguesas sencillas (S), dobles (D) y triples (T),
	//las cuales tienen un costo de $20, $25 y $28 respectivamente.
	//La empresa acepta tarjetas de crédito con un cargo de 5 % sobre la compra.
	//Suponiendo que los clientes adquieren N hamburguesas, las cuales pueden ser de diferente tipo,
	//realice un algoritmo para determinar cuánto deben pagar.
	
	S<-20;
	D<-25;
	T<-28;
	pts<-0;
	ptd<-0;
	ptt<-0;
	pagof<-0;
	cargo<-0;
	Escribir "         Bienvenido a su tienda de amburguesas. ";
	
	Escribir "            Cuantas amburguesas  va a pedir: ";
	Leer ca;
	
	Para i<-1 Hasta ca Con Paso 1 Hacer
		Escribir "Ingrese una letra segun el tipo de amburguesa que desea.";
		Escribir "s=sencilla, d=doble, t=triple: ";
		Escribir "Que tipo de amburguesa desea.";
		Leer tipo;
		Si tipo=='s' Entonces 
			Escribir "Indique su forma de pago";
			Escribir "Targeta de credito=1, efectivo=2: ";
			Leer mp;
			Si mp==1 Entonces
				cargo<-S*0.05;
				pgs<-S+cargo;
				pts<-pts+pgs;
				Escribir "El pago es:$ ",pgs;
			Sino
				pgs<-S;
				pts<-pts+pgs;
				Escribir "El pago es:$ ",pgs;
			FinSi
		Sino
			Si tipo=='d' Entonces
				Escribir "Indique su forma de pago";
				Escribir "Targeta de credito=1, efectivo=2: ";
				Leer mp;
				Si mp==1 Entonces
					cargo<-D*0.05;
					pgd<-D+cargo;
					ptd<-ptd+pgd;
					Escribir "El pago es:$ ",pgd;
				Sino
					pgd<-D;
					ptd<-ptd+pgd;
					Escribir "El pago es:$ ",pgd;
				FinSi
			Sino
				Si tipo=='t' Entonces
					Escribir "Indique su forma de pago";
					Escribir "Targeta de credito=1, efectivo=2: ";
					Leer mp;
					Si mp==1 Entonces
						cargo<-T*0.05;
						pgt<-T+cargo;
						ptt<-ptt+pgt;
						Escribir "El pago es:$ ",pgt;
					Sino
						pgt<-T;
						ptt<-ptt+pgt;
						Escribir "El pago es:$ ",pgt;	
					FinSi
				Sino
					
				FinSi
			FinSi
		FinSi
		
	FinPara
	pagof<-pts+ptd+ptt; 
	Escribir "El pago total es:$",pagof;
	
FinProceso
